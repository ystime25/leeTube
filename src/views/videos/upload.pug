extends ../base.pug

block content
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(type="text", name="title", placeholder="Title", maxlength=50, required)
        input(type="text", name="description", placeholder="Description", maxlength=200, required)
        input(type="text", name="hashtags", placeholder="Hashtags, separate by comma.", required)
        input(type="submit", value="Upload")